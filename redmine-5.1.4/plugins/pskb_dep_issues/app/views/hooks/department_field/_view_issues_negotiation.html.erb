<% if !User.current.admin? %>
<script>
    function disableIssueEvent() {
        let contElems = document.getElementsByClassName('contextual');
        let contElemsArray = Array.from(contElems);
        contElemsArray.forEach(function(elem){
            elem.style.display = "none";
        })

        let actionsDiv = document.getElementsByClassName('actions');
        let actionsDivArray = Array.from(actionsDiv);
        actionsDivArray.forEach(function(elem){
            elem.style.display = "none";
        })

        let addNotesForm = document.getElementById('add-notes-form');
        let parentDiv = null;
        if (addNotesForm != null) {
            parentDiv = addNotesForm.closest('div');
        }

        if (parentDiv != null) {
            parentDiv.style.display = "none";
        } 
    }

    document.addEventListener('DOMContentLoaded', disableIssueEvent);
</script>
<% end %>